{
  "EnvironmentVariablesToSetup": {
    "PINGU_DB_CONNECTION_STRING": "YOUR_PINGU_DB_CONNECTION_STRING",
    "GOOGLE_CLIENT_ID": "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET": "GOOGLE_CLIENT_SECRET",
    "NGROK_AUTH_TOKEN": "NGROK_AUTH_TOKEN",
    "MAILKIT_HOST": "YOUR_MAILKIT_HOST",
    "MAILKIT_DEFAULT_USERNAME": "YOUR_MAILKIT_DEFAULT_USERNAME",
    "MAILKIT_DEFAULT_EMAIL": "YOUR_MAILKIT_DEFAULT_EMAIL",
    "MAILKIT_DEFAULT_PASSWORD": "YOUR_MAILKIT_DEFAULT_PASSWORD",
    "MAILKIT_DEFAULT_DISPLAY_NAME": "YOUR_MAILKIT_DEFAULT_DISPLAY_NAME",
    "TWILIO_ACCOUNT_SID": "YOUR_TWILIO_ACCOUNT_SID",
    "TWILIO_AUTH_TOKEN": "YOUR_TWILO_AUTH_TOKEN",
    "TWILIO_PHONE_NUMBER": "YOUR_TWILIO_PHONE_NUMBER"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Sixteen, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\info\\log-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\errors\\log-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "Ngrok": {
    "ShowNgrokWindow": true,
    "StartNgrokService": true,
    "AuthToken": "NGROK_AUTH_TOKEN",
    "Domain": null
  },
  "MailKit": {
    "Host": "YOUR_MAILKIT_HOST",
    "Port": 465,
    "UseSsl": true,
    "Accounts": {
      "Default": {
        "Username": "YOUR_MAILKIT_DEFAULT_USERNAME",
        "Email": "YOUR_MAILKIT_DEFAULT_EMAIL",
        "Password": "YOUR_MAILKIT_DEFAULT_PASSWORD",
        "DisplayName": "YOUR_MAILKIT_DEFAULT_DISPLAY_NAME"
      }
    }
  },
  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "Accounts": {
      "Default": {
        "PhoneNumber": "YOUR_TWILIO_PHONE_NUMBER"
      }
    }
  },
  "OAuth": {
    "Google": {
      "ClientId": "GOOGLE_CLIENT_ID",
      "ClientSecret": "GOOGLE_CLIENT_SECRET"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [ "https://localhost:6360", "http://localhost:3062" ]
}
